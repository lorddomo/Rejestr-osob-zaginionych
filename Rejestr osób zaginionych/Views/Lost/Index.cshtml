@model System.Data.DataTable

@{
    ViewData["Title"] = "List of losts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class"jumbotron">
    <h1 class="text-center">Missing people register</h1>
</div>




<p>
    <a asp-action="AddorEdit">Add new lost</a>
</p>
<table class="table">
        <thead class="thead-light">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Age
                </th>
                <th>
                     Sex
                </th>
                <th>
                    Last Seen Place
                </th>
                <th>
                    Last Seen Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @for (int i=0; i< Model.Rows.Count; i++)
     {
            <tr>
                <td>
                    @Model.Rows[i]["Name"]
                </td>
                <td>
                    @Model.Rows[i]["LastName"]
                </td>
                <td>
                    @Model.Rows[i]["Age"]
                </td>
                <td>
                    @Model.Rows[i]["Sex"]
                </td>
                <td>
                    @Model.Rows[i]["LastSeenPlace"]
                </td>
                <td>
                    @Model.Rows[i]["LastSeenDate"]
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["ID"]">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["ID"]">Delete</a>
                </td>
            </tr>
     }
        </tbody>
    </table>
